{
  "manifest_version": 3,
  "name": "Random Episode Selector",
  "version": "1.0",
  "description": "Select a random episode from Paramount Plus.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_title": "Select Random Episode"
  }
}
